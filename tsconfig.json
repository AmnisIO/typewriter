{
  "compilerOptions": {
    "removeComments": false,
    "preserveConstEnums": true,
    "declaration": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "inlineSourceMap": true,
    "inlineSources": true,
    "target": "ES5",
    "outDir": "dist/",
    "types": [
      "node"
    ]
  },
  "formatCodeOptions": {
    "indentSize": 2,
    "tabSize": 2
  },
  "exclude": [
    "node_modules",
    "tests",
    "dist"
  ]
}